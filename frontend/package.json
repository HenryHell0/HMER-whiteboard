{
	"name": "hmer-whiteboard",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"scripts": {
		"dev": "concurrently -k -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"npm:dev:frontend\" \"npm:dev:backend\"",
		"dev:frontend": "vite",
		"dev:backend": "bash -c 'cd ../backend && source .venv/bin/activate && texteller launch --ngpu-per-replica 0'",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "eslint . --fix",
		"format": "prettier --write src/",
		"deploy": "gh-pages -d dist"
	},
	"dependencies": {
		"vue": "^3.5.22",
		"vue-mathjax-next": "^0.0.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/eslint-config-prettier": "^10.2.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.33.0",
		"eslint-plugin-vue": "~10.4.0",
		"gh-pages": "^6.3.0",
		"globals": "^16.3.0",
		"prettier": "3.6.2",
		"vite": "^7.1.7",
		"vite-plugin-vue-devtools": "^8.0.2"
	}
}
